<!--Seção #agendamento-->
<section id="agendamento" class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="card border-0 shadow-lg overflow-hidden">
          <div class="row g-0">
            <!-- Coluna da Imagem -->
            <div class="col-md-5 d-none d-md-block">
              <img src="images/18.jpeg" alt="Agendamento de consulta" class="img-fluid h-100" style="object-fit: cover;">
            </div>
            
            <!-- Coluna do Formulário -->
            <div class="col-md-7">
              <div class="card-body p-5">
                <h2 class="card-title text-center mb-4">Agende sua Consulta</h2>
                <p class="text-center text-muted mb-4">Preencha o formulário abaixo e entraremos em contato para confirmar seu horário</p>
                
                <form id="agendamentoForm" novalidate>
                  <div class="mb-3">
                    <label for="nomeCompleto" class="form-label">Nome Completo</label>
                    <input type="text" class="form-control form-control-lg" id="nomeCompleto" name="nome" required>
                    <div class="invalid-feedback">Por favor, informe seu nome completo</div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-6 mb-3">
                      <label for="telefone" class="form-label">Telefone</label>
                      <input type="tel" class="form-control form-control-lg" id="telefone" name="telefone" required>
                      <div class="invalid-feedback">Informe um telefone válido</div>
                    </div>
                    <div class="col-md-6 mb-3">
                      <label for="email" class="form-label">E-mail</label>
                      <input type="email" class="form-control form-control-lg" id="email" name="email" required>
                      <div class="invalid-feedback">Informe um e-mail válido</div>
                    </div>
                  </div>
                  
                  <div class="mb-3">
                    <label for="tipoConsulta" class="form-label">Tipo de Consulta</label>
                    <select class="form-select form-select-lg" id="tipoConsulta" name="tipoConsulta" required>
                      <option value="" selected disabled>Selecione uma opção</option>
                      <option value="Presencial">Presencial</option>
                      <option value="Online">Online</option>
                    </select>
                    <div class="invalid-feedback">Selecione o tipo de consulta</div>
                  </div>
                  
                  <div class="mb-4">
                    <label for="mensagem" class="form-label">Mensagem (opcional)</label>
                    <textarea class="form-control" id="mensagem" name="mensagem" rows="3" placeholder="Alguma informação adicional ou preferência de horário..."></textarea>
                  </div>
                  
                  <div class="d-grid">
                    <button class="btn btn-primary btn-lg py-3" type="submit">
                      <i class="fas fa-calendar-check me-2"></i> Solicitar Agendamento
                    </button>
                  </div>
                </form>
                
                <!-- Mensagens de feedback -->
                <div id="formFeedback" class="mt-4" style="display: none;"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>